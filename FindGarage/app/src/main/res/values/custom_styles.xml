<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="actionBarIV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/action_bar_image_view_padding</item>
        <item name="android:paddingLeft">@dimen/action_bar_image_view_padding</item>
    </style>

    <style name="ButtonStyleDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/custom_dialog_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/custom_dialog_paading</item>
    </style>

    <style name="auto_complete_text_view">
        <item name="android:textSize">@dimen/auto_complete_field_text_size</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="auto_complete_text_view_field" parent="auto_complete_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/auto_complete_field_left_right</item>
        <item name="android:paddingTop">@dimen/auto_complete_field_top_bottom</item>
        <item name="android:paddingBottom">@dimen/auto_complete_field_top_bottom</item>
        <item name="android:paddingRight">@dimen/auto_complete_field_left_right</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/auto_complete_field_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/auto_complete_shape</item>
    </style>

    <style name="text_view">
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="text_view_heading" parent="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="spinnerTextColor">
        <item name="android:textColor">#eb891b</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="container_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorGreyBg</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>


</resources>