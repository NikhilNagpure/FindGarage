<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <layer-list>
            <item
                android:left="1dp"
                android:top="1dp">
                <shape>
                    <corners android:radius="3dp" />

                    <solid android:color="#20000000" />
                </shape>
            </item>
            <item
                android:bottom="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FFFFFF" />

                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>