<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item 
                android:left="2dp" 
                android:right="0dp" 
                android:top="2dp">
                <shape>
                    <solid android:color="@color/colorThemeBlueDark" />
                </shape>
            </item>
            <item 
                android:bottom="1dp" 
                android:right="1dp">
                <shape>
                    <solid android:color="@color/colorThemeBlue" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/colorVeryDarkBlue" />
                </shape>
            </item>
        </layer-list></item>

</selector>